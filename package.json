{
  "name": "@ojson/models",
  "version": "1.1.1",
  "description": "Declarative data retrieval with automatic memoization for server-side TypeScript applications",
  "type": "module",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "exports": {
    ".": {
      "types": "./build/index.d.ts",
      "import": "./build/index.js"
    }
  },
  "files": [
    "build",
    "README.md",
    "AGENTS.md",
    "LICENSE",
    "docs"
  ],
  "scripts": {
    "prepare": "husky install",
    "prebuild": "rm -rf build",
    "build": "tspc",
    "test": "npm run test:units && npm run test:types",
    "test:units": "vitest --run",
    "test:units:fast": "vitest --run --exclude 'examples/**'",
    "test:coverage": "vitest --run --coverage",
    "test:coverage:fast": "vitest --run --coverage --exclude 'examples/**'",
    "test:types": "tspc -p tsconfig.types.json",
    "test:integration": "vitest --run examples/",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "keywords": [
    "models",
    "memoization",
    "declarative",
    "server-side",
    "typescript",
    "express",
    "caching",
    "telemetry",
    "opentelemetry"
  ],
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/ojson-platform/models.git"
  },
  "bugs": {
    "url": "https://github.com/ojson-platform/models/issues"
  },
  "homepage": "https://github.com/ojson-platform/models#readme",
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/sdk-node": "^0.202.0",
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@opentelemetry/context-async-hooks": "^2.2.0",
    "@opentelemetry/sdk-trace-base": "^2.2.0",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "ts-patch": "^3.3.0",
    "typescript": "^5.7.2",
    "vitest": "^3.2.3",
    "vitest-when": "^0.10.0"
  }
}
